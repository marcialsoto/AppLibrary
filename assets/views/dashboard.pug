                            td Customer 2
                            td Complete
                        tr
                            td 0003
                            td Product Name 3
                            td Customer 3
                            td Processing
                        tr
                            td 0004
                            td Product Name 4
                            td Customer 4
                            td Pending
    
    .col-md-12.col-lg-4
        +card('Bootbox', 'http://bootboxjs.com/getting-started.html')
            p
              | Content here. 
              a.alert(href='#') Alert!

        +card('Select2', 'https://select2.org/getting-started/basic-usage')
            select(class="js-example-basic-multiple" name="states[]" multiple="multiple" style="width:100%")
                option(value="LI") Lima
                option(value="CH") Chincha
                option(value="JA") Jaen

block append scripts
    script.
        let $ = require('jquery');
        let bootbox = require("bootbox");

        $('.js-example-basic-multiple').select2();

        $(document).on("click", ".alert", function(e) {
            bootbox.alert("Hello world!", function() {
                console.log("Alert Callback");
            });
        });

        $('.example1').on('click', function () {
          console.log("se ha clickado");
            $.alert({
                title: 'Alert!',
                content: 'Simple alert!',
            });
        });

        $('.example2').on('click', function () {
          $.confirm({
              title: 'Confirm!',
              content: 'Simple confirm!',
              buttons: {
                  confirm: function () {
                      $.alert('Confirmed!');
                  },
                  cancel: function () {
                      $.alert('Canceled!');
                  },
                  somethingElse: {
                      text: 'Something else',
                      btnClass: 'btn-blue',
                      keys: ['enter', 'shift'],
                      action: function(){
                          $.alert('Something else?');
                      }
                  }
              }
          });
        });